# ServerKit Configuration
# Copy this file to .env and customize

# Security Keys (REQUIRED - generate with: serverkit generate-keys)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database
# SQLite (default):
DATABASE_URL=sqlite:///serverkit.db
# PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/serverkit

# CORS - your domain (comma-separated for multiple)
CORS_ORIGINS=http://localhost

# Ports
PORT=80
SSL_PORT=443

# Environment
FLASK_ENV=production
